#include <SoftwareSerial.h>

SoftwareSerial BT(10, 11);  // RX, TX (Bluetooth module pins)

int relay1 = 2;  
int relay2 = 3;

void setup() {
  pinMode(relay1, OUTPUT);
  pinMode(relay2, OUTPUT);
  digitalWrite(relay1, LOW);
  digitalWrite(relay2, LOW);

  Serial.begin(9600);
  BT.begin(9600);   // HC-05 default baud rate
}

void loop() {
  if (BT.available()) {
    char c = BT.read();

    if (c == '1') {          // Turn Relay 1 ON
      digitalWrite(relay1, HIGH);
    }
    else if (c == '2') {     // Turn Relay 1 OFF
      digitalWrite(relay1, LOW);
    }
    else if (c == '3') {     // Turn Relay 2 ON
      digitalWrite(relay2, HIGH);
    }
    else if (c == '4') {     // Turn Relay 2 OFF
      digitalWrite(relay2, LOW);
    }
  }
}
